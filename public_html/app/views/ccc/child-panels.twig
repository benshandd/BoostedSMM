                                <button type="submit" class="btn btn-primary btn-block btn-border">Submit {{ currency['symbol'] }}{{ (site['childpanel_price']*currency["value"]) }}</button>
                            </form>
                        </div>
                    </div>
                </div><!-- ./col -->
                <div class="col-lg-6">
                    
                        </div><!-- ./aq-item -->
                    </div>
                </div><!-- ./col -->
